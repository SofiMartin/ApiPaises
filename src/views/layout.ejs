<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title || 'Título por Defecto' %></title> <!-- Título dinámico -->
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
    <style>
        .flash-messages {
            margin: 10px 0;
        }
        .alert {
            padding: 10px;
            margin-bottom: 15px;
            border-radius: 5px;
        }
        .alert-success {
            background-color: #ede9fe; /* Morado claro */
            color: #5b21b6; /* Morado oscuro */
            border: 1px solid #c4b5fd;
        }
        .alert-error {
            background-color: #fde2e2; /* Rosa pálido */
            color: #b91c1c; /* Rojo oscuro */
            border: 1px solid #fca5a5;
        }
        body {
            font-family: 'Inter', sans-serif;
        }
    </style>
</head>
<body class="bg-purple-50 text-purple-800">
    <%- include('partials/header') %> <!-- Header -->

    <!-- Contenido principal -->
    <main class="max-w-7xl mx-auto p-6">
        <% if (locals.messages && Object.keys(messages).length > 0) { %>
            <div class="flash-messages">
                <% Object.keys(messages).forEach(type => { %>
                    <% messages[type].forEach(message => { %>
                        <div class="alert alert-<%= type %> mb-4">
                            <%= message %>
                        </div>
                    <% }) %>
                <% }) %>
            </div>
        <% } %>
        
        <%- body %> <!-- Renderizo contenido dinámico como HTML -->
    </main>

    <%- include('partials/footer') %> <!-- Footer -->
</body>
</html>
